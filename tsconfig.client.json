{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./public/js",
    "rootDir": "./src/client",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/client/**/*.ts"],
  "exclude": ["node_modules"]
} 